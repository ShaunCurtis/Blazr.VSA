@namespace Blazr.App.UI
@inherits ViewerFormBase<DmoCustomer, CustomerId>

<PageTitle>@this.FormTitle</PageTitle>

<div class="modal-header">
    <div class="h4">
        @this.FormTitle
    </div>
</div>

<div class="modal-body px-3">


    <div class="row">

        <div class="col-12 col-lg-6 mb-2">
            <BlazrTextViewControl Label="Id" Value="@this.Presenter.Item.Id.Value.ToDisplayId()" />
        </div>

    </div>

    <div class="row">

        <div class="col-12 col-lg-8 mb-2">
            <BlazrTextViewControl Label="Customer Name" Value="@this.Presenter.Item.CustomerName" />
        </div>

    </div>
</div>

<div class="modal-footer bg-light text-end">

    @if (!this.HideFooter)
    {
        <UIButton ButtonColourType=UIButtonColourType.Exit ClickEvent=this.OnExit>Exit</UIButton>
    }
</div>

@code {
    protected virtual string FormTitle => $"{this.UIEntityService.SingleDisplayName} Viewer";
}